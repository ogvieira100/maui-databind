<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="data_bind.Pages.FourBind"
             Title="FourBind">
    <VerticalStackLayout
           
        >
        <Label 
            Text="Welcome to .NET MAUI!"
            Rotation="{Binding Source={x:Reference sldPrincipal},Path=Value}"
             VerticalOptions="Center" 
             HorizontalOptions="Center"
             Margin="0,100,30,30"
            />
        <Slider
            x:Name="sldPrincipal"
            Minimum="0"
            Maximum="360"
            ></Slider>
      
    </VerticalStackLayout>
</ContentPage>